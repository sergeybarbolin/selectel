// @import '../blocks/slider/slider.styl'

.slider
  width 100%
  height 600px
  position relative
  @media (max-width screen-xs)
    height 568px
  &__slide
    /*position absolute*/
    left 0
    top 0
    width 100%
    height 600px
    &--data-store
      background gradient-blue
    &--servers
      background gradient-dark-blue
    &--public-cloud
      background gradient-teal
    &--server-equipment
      background gradient-purple

.slick-slider
  position relative
  display block
  box-sizing border-box
  overflow hidden
  -webkit-user-select none
    -moz-user-select none
      -ms-user-select none
        user-select none
  -webkit-touch-callout none
  -khtml-user-select none
  -ms-touch-action pan-y
    touch-action pan-y
  -webkit-tap-highlight-color transparent

.slick-list
  position relative
  display block
  overflow hidden
  margin 0
  padding 0

.slick-listfocus
  outline none

.slick-list.dragging
  cursor pointer

.slick-slider .slick-track,
.slick-slider .slick-list
  -webkit-transform translate3d(0, 0, 0)
  -moz-transform translate3d(0, 0, 0)
  -ms-transform translate3d(0, 0, 0)
  -o-transform translate3d(0, 0, 0)
  transform translate3d(0, 0, 0)

.slick-track
  position relative
  top 0
  left 0
  min-height 600px
  display block
  margin-left auto
  margin-right auto

.slick-trackbefore,
.slick-trackafter
  display table
  content ''

.slick-trackafter
  clear both

.slick-loading .slick-track
  visibility hidden

.slick-slide
  display none
  float left
  min-height 1px

[dir='rtl'] .slick-slide
  float right

.slick-initialized .slick-slide
  display block

.slick-loading .slick-slide
  visibility hidden

.slick-vertical .slick-slide
  display block
  height auto
  border 1px solid transparent

.slick-arrow.slick-hidden
  display none

.slick-dots
  display block
  text-align center
  position absolute
  left 0
  margin auto
  bottom 35px
  right 0
  padding 0
  @media (max-width screen-xs)
    visibility hidden

.slick-dots li
  display inline-block
  overflow hidden
  margin 0 4px

.slick-dots button
  display block
  border-radius 50%
  border 1px solid white
  width 8px
  height 8px
  overflow hidden
  line-height 0
  font-size 0
  outline none
  padding 3px
  background transparent
  opacity 0.6
  cursor pointer
  transition transi-opacity

.slick-arrow
  visibility hidden
  display inline-block
  @media (max-width screen-xs)
    visibility visible

.slick-dots buttonhover
  opacity 1

.slick-active button
  background #fff
  width 0
.slick-prev
  display: block
  height 0
  border-style solid
  border-width 14px 28px 14px 0
  border-color transparent #ffffff transparent