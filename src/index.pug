//- include bemto.pug
doctype
html(lang="ru")
	head
		meta(charset="utf-8")
		title= "Тестовое задание Selectel"
		meta(name="viewport" content="width=device-width, initial-scale=1")
		meta(name="description" content="Тестовое задание Selectel")
		link(rel="shortcut icon" href="img/body/favicon.png")
		link(href="css/libs.min.css" rel="stylesheet")
		link(href="css/style.css" rel="stylesheet")
	body(class="body")
		header.header
			.container
				.header__head
					a.logo(href="https://selectel.ru/" target="_blank")
						svg(role="img" class="logo__img logo__img--color-white")
							use(xlink:href="img/sprite.svg#logo")
					a.phone-number(href="tel:+7(800)555-06-75")
						svg(role="img" class="phone-number__icon phone-number__icon--color-white")
							use(xlink:href="img/sprite.svg#phone-number__icon")
						span.phone-number__number="+7 (800) 555-06-75"

		include blocks/slider/slider.pug

		section.section
			.container
				h1.title.title--section Доступные конфигурации
				.table#table
					svg(role="img" class="table__loader")
							use(xlink:href="img/sprite.svg#loader")
		
		footer.footer
			.container
				.footer__inner
					a.logo(href="https://selectel.ru/" target="_blank")
						svg(role="img" class="logo__img logo__img--color-white")
							use(xlink:href="img/sprite.svg#logo")
					.socials
						a.socials__link(target="_blank" href="https://vk.com/selectel")
							svg(role="img" width="32px" height="18px" class="socials__ico")
								use(xlink:href="img/sprite.svg#vk")
						a.socials__link(target="_blank" href="https://www.facebook.com/selectel/")
							svg(role="img" width="11px" height="24px" class="socials__ico")
								use(xlink:href="img/sprite.svg#fb")
						a.socials__link(target="_blank" href="https://twitter.com/selectel")
							svg(role="img" width="28" height="24" class="socials__ico")
								use(xlink:href="img/sprite.svg#twitter")
						a.socials__link(target="_blank" href="https://habrahabr.ru/company/selectel/")
							svg(role="img" width="22px" height="24px" class="socials__ico")
								use(xlink:href="img/sprite.svg#hh")
						a.socials__link(target="_blank" href="https://www.youtube.com/channel/UCVU0Ml1l_Y90wmy5EjWTSng")
							svg(role="img" width="28px" height="20px" class="socials__ico")
								use(xlink:href="img/sprite.svg#youtube")
						a.socials__link(target="_blank" href="https://www.instagram.com/selectel.ru/")
							svg(role="img" width="24px" height="24px" class="socials__ico")
								use(xlink:href="img/sprite.svg#inst")
			script(src="js/script.min.js")